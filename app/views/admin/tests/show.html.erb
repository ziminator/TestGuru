<div class="row justify-content-center mt-3">
  <div class="col col-md-10 ">

    <h1><%= t('.test', test: @test.title) %></h1>

    <p>
      <strong><%= t('.test_title') %></strong>
      <%= @test.title %>
    </p>

    <p>
      <strong><%= t('.test_level') %></strong>
      <%= @test.level %>
    </p>

    <div class="card border-primary">
      <div class="card-body">
        <h2><%= t('.test_questions', test: @test.title) %></h2>

        <table>
          <tr>
            <th><%= t('.question_body') %></th>
            <th colspan="3"><%= t('.actions') %></th>
          </tr>
          <tr>
            <td><%= render @test.questions %></td>
          </tr>
        </table>
      </div>
    </div>

    <p>
      <%= link_to t('.new_question'), new_admin_test_question_path(@test) %>
    </p>

    <p>
      <%= link_to t('.back'), admin_tests_path %>
    </p>
  </div>
</div>
